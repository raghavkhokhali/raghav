//to find the factorial of the number
#include<stdio.h>
int raghav(int a);  // function prototype
int main(){
    int a;
    printf("Enter the value of factorial;");
    scanf("%d",&a); 
    printf("The value of the factorial %d! is %d" ,a,raghav(a));
    // function call in the library function
    
    
    
    
    
    return 0;
}
int raghav(int a){          //function definition
    if (a==1 || a==0){
        return 1;  // as the factorial of 1 and 0 is 1 ;
        //!1 || 0!! =1
    }
    else{
        return a * raghav(a-1);
}
}

// program to find the sum of the numbers
#include<stdio.h>
 int rec(int a){
     if(a==1){
         return 1;
     }
     else{
         return (a)+rec(a-1);
     }
     
 }



    int main() {
        int a;
    printf("enter the value of number that you want to print till:");
    scanf("%d",&a);
    printf("the value of the number is to be given as %d",rec(a));
        return 0;
}
