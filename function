// program to understand the function and recursion
#include <stdio.h>
void display();  //function prototype
int raaghav();
int main() {
    display();  //function call
    
    raaghav();
    return 0;
}

void display(){   //function definiton
    
    printf("you have created a program  to initialize the function in the program \n");
}

int raaghav(){
    
    printf("thank you");
}



//simple quick quiz
#include<stdio.h>
void good_morning();
void good_afternoon();
void good_night();
int main(){
    good_morning();
    good_afternoon();
    good_night();
    return 0;
    
}
void good_morning(){
    printf("Good Morning\n");
}
void good_afternoon(){
    printf("Good afternoon\n");
}
void good_night(){
    printf("Good Night\n");
}

//function inside function program
#include<stdio.h>
void good_morning();
void good_afternoon();
void good_night();
int main(){
    good_morning();
  
    
    return 0;
    
}
void good_morning(){
    printf("Good Morning\n");
      good_afternoon();
}
void good_afternoon(){
    printf("Good afternoon\n");
    good_night();
}
void good_night(){
    printf("Good Night\n");
}
