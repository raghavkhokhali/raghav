// write a program to determine whether the given input is prime or not.
//using while loop

#include <stdio.h>

int main()
{
    int a,i=2,prime=1;
    printf("enter the value of the number");
    scanf("%d",&a);
    while(i<a){
        if(a%i==0){
            prime=0;
            break;}
            i++;
            
        }
    if(prime==0){
        printf("the number is not prime");
        
    }
    else{
        printf("the number is prime");
    }
   
 
    return 0;
}


//using do while loop


#include <stdio.h>

int main()
{
    int a,i=2,prime=1;
    printf("enter the value of the number");
    scanf("%d",&a);
   do{
   
        if(a%i==0){
            prime=0;
        
       
       
   }
     i++;  
   }while(i<a);
    if(prime==0){
        printf("the number is not prime");
        
    }
    else{
        printf("the number is prime");
    }
   
 
    return 0;
}

// using for loop
#include<stdio.h>
int main(){
    int a,i,prime=1;
    printf("enter the value of the number");
    scanf("%d",&a);
    for(i=2;i<a;i++){
        if(a%i==0){
            prime=0;
            break;
            
        }
    }
    if(prime==0){
        printf("this is not the prime number ");
        
    }
    else{
        printf("this is the prime number");
    }
    
    return 0;
}
    
    

